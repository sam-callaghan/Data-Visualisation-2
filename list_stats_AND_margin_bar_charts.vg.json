{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "params": [
    {
      "name": "Year_filter",
      "value": "2017",
      "bind": {
        "input": "select",
        "options": [
          "2012",
          "2013",
          "2014",
          "2015",
          "2016",
          "2017",
          "2018",
          "2019",
          "2020"
        ],
        "name": "Year: "
      }
    },
    {
      "name": "Team_filter",
      "value": "Richmond",
      "bind": {
        "input": "select",
        "options": [
          "Adelaide",
          "Brisbane Lions",
          "Carlton",
          "Collingwood",
          "Essendon",
          "Fremantle",
          "Geelong",
          "Gold Coast",
          "Greater Western Sydney",
          "Hawthorn",
          "Melbourne",
          "North Melbourne",
          "Port Adelaide",
          "Richmond",
          "St Kilda",
          "Sydney",
          "West Coast",
          "Western Bulldogs"
        ],
        "name": "AFL Team: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.Year == Year_filter"},
    {"filter": "datum.Team == Team_filter"}
  ],
  "data": {
    "url": "https://raw.githubusercontent.com/sam-callaghan/Data-Visualisation-2/main/data/afl_stats_list_stats_only.csv"
  },
  "config": {"background": "grey"},
  "vconcat": [
    {
      "width": 570,
      "height": 320,
      "mark": "bar",
      "encoding": {
        "x": {
          "field": "Round",
          "type": "nominal",
          "sort": [
            "R1",
            "R2",
            "R3",
            "R4",
            "R5",
            "R6",
            "R7",
            "R8",
            "R9",
            "R10",
            "R11",
            "R12",
            "R13",
            "R14",
            "R15",
            "R16",
            "R17",
            "R18",
            "R19",
            "R20",
            "R21",
            "R22",
            "R23",
            "EF",
            "QF",
            "PF",
            "SF",
            "GF"
          ],
          "axis": {
            "domain": false,
            "ticks": false,
            "labelAngle": 0,
            "labelPadding": 4,
            "titleColor": "white",
            "labelColor": "white",
            "titleFontSize": 18,
            "titlePadding": 20
          }
        },
        "y": {
          "field": "Margin",
          "type": "quantitative",
          "axis": {
            "gridColor": {
              "condition": {"test": "datum.value === 0", "value": "black"},
              "value": "#ddd"
            },
            "titleColor": "white",
            "labelColor": "white",
            "titleFontSize": 18,
            "titlePadding": 20
          }
        },
        "color": {
          "field": "Margin",
          "type": "quantitative",
          "scale": {
            "scheme": "redyellowgreen",
            "domainMid": 0,
            "domainMax": 150,
            "domainMin": -150
          },
          "legend": {
            "title": "Margin",
            "titleColor": "white",
            "labelColor": "white",
            "titleFontSize": 18
          }
        },
        "stroke": {"value": "black"},
        "tooltip": [
          {"field": "Margin", "type": "nominal", "title": "Margin"},
          {"field": "Team 2", "type": "nominal", "title": "Opposition"}
        ]
      }
    },
