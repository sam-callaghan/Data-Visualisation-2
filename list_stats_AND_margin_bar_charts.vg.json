{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "params": [
    {
      "name": "Year_filter",
      "bind": {
        "input": "select",
        "options": [
          "2012",
          "2013",
          "2014",
          "2015",
          "2016",
          "2017",
          "2018",
          "2019",
          "2020",
          "Total"
       ],
        "name": "Year: "
      }
    },
    {
      "name": "Team_filter",
      "bind": {
        "input": "select",
        "options": [
          "Adelaide",
          "Brisbane Lions",
          "Carlton",
          "Collingwood",
          "Essendon",
          "Fremantle",
          "Geelong",
          "Gold Coast",
          "Greater Western Sydney",
          "Hawthorn",
          "Melbourne",
          "North Melbourne",
          "Port Adelaide",
          "Richmond",
          "St Kilda",
          "Sydney",
          "West Coast",
          "Western Bulldogs"
       ],
        "name": "AFL Team: "
      }
    }
  ],
  "transform": [
      {"filter": "datum.Year == Year_filter"},
      {"filter":"datum.Team == Team_filter"},
      {"calculate": "datum.['Average Height Team 1'] - datum.['Average Height Team 2']", "as": "Height Differential"}
  ],
  "data": {
    "url":"https://raw.githubusercontent.com/sam-callaghan/Data-Visualisation-2/main/data/afl_stats_list_stats_only.csv"
  },
  "vconcat": [
    {
      "width": 600,
      "height": 240,
      "mark": "bar",
      "encoding": {
        "x": {
          "field": "Round", "type": "nominal", 
          "sort": ["R1", "R2", "R3", "R4", "R5", "R6", "R7", "R8", "R9", "R10", "R11", "R12", "R13", "R14","R15", "R16", "R17", "R18", "R19", "R21", "R22", "R23", "EF","QF","PF", "SF", "GF"],
          "axis": {
            "domain": false,
            "ticks": false,
            "labelAngle": 0,
            "labelPadding": 4
          }
        },
        "y": {
          "field": "Margin", "type": "quantitative",
          "axis": {
            "gridColor": {
              "condition": {"test": "datum.value === 0", "value": "black"},
              "value": "#ddd"
            }
          }
        }
      }
    },
    {
      "width": 600,
      "height": 240,
      "mark": "bar",
      "encoding": {
        "x": {
          "field": "Round", "type": "nominal", 
          "sort": ["R1", "R2", "R3", "R4", "R5", "R6", "R7", "R8", "R9", "R10", "R11", "R12", "R13", "R14","R15", "R16", "R17", "R18", "R19", "R21", "R22", "R23", "EF","QF","PF", "SF", "GF"],
          "axis": {
            "domain": false,
            "ticks": false,
            "labelAngle": 0,
            "labelPadding": 4
          }
        },
        "y": {
          "field": "Average Height Team 1", "type": "quantitative",
          "axis": {
            "gridColor": {
              "condition": {"test": "datum.value === 0", "value": "black"},
              "value": "#ddd"
            }
          }
        }
      }

    }
  ]
}
