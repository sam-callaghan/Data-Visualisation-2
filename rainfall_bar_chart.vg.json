{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A bar chart with negative values. We can hide the axis domain line, and instead use a conditional grid color to draw a zero baseline.",
  "width": 400,
 "height": 200,
  "params": [
    {
      "name": "Year_filter",
      "bind": {
        "value": "2012",
        "input": "select",
        "options": [
          "2012",
          "2013",
          "2014",
          "2015",
          "2016",
          "2017",
          "2018",
          "2019",
          "2020",
          "Total"
       ],
        "labels":[
          "2012",
          "2013",
          "2014",
          "2015",
          "2016",
          "2017",
          "2018",
          "2019",
          "2020",
          "Total"
        ],
        "name": "Year: "
      }
    },
    {
      "name": "Team_filter",
      "bind": {
        "value" : "Adelaide",
        "input": "select",
        "options": [
          "Adelaide",
          "Brisbane Lions",
          "Carlton",
          "Collingwood",
          "Essendon",
          "Fremantle",
          "Geelong",
          "Gold Coast",
          "Greater Western Sydney",
          "Hawthorn",
          "Melbourne",
          "North Melbourne",
          "Port Adelaide",
          "Richmond",
          "St Kilda",
          "Sydney",
          "West Coast",
          "Western Bulldogs"
       ],
        "labels":[
          "Adelaide",
          "Brisbane Lions",
          "Carlton",
          "Collingwood",
          "Essendon",
          "Fremantle",
          "Geelong",
          "Gold Coast",
          "Greater Western Sydney",
          "Hawthorn",
          "Melbourne",
          "North Melbourne",
          "Port Adelaide",
          "Richmond",
          "St Kilda",
          "Sydney",
          "West Coast",
          "Western Bulldogs"
        ],
        "name": "AFL Team: "
      }
    }
  ],
  "data": {
"url": "https://raw.githubusercontent.com/sam-callaghan/Data-Visualisation-2/main/data/afl_stats_rainfall_only.csv"
  },
  "transform": [
      {"filter": "datum.Year == Year_filter"},
      {"filter": "datum.Team == Team_filter"}
  ],
  "encoding": {
    "y": {
      "field": "Rainfall",
      "type": "ordinal",
      "sort": ["None", "Low", "Medium", "High"],

      "axis": {
        "domain": false,
        "ticks": false,
        "labelAngle": 0,
        "labelPadding": 4
      }
    },
    "x": {
      "field": "Margin",
      "type": "quantitative",
      "scale": {"padding": 20},
      "axis": {
        "gridColor": {
          "condition": {"test": "datum.value === 0", "value": "black"},
          "value": "#ddd"
        }
      }
    },
    "color":{
          "field": "Margin",
          "type":"quantitative",
          "scale":{"scheme":"blueorange"}
        }
  },
  "layer": [
    {"mark": "bar"},
    {
      "mark": {
        "type": "text",
        "align": {"expr": "datum.Margin < 0 ? 'right' : 'left'"},
        "dx": {"expr": "datum.Margin < 0 ? -2 : 2"}
      },
      "encoding": {"text": {"field": "Margin", "type": "quantitative"}}
    }
  ]
}
