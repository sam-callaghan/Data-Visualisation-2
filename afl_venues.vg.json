{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 520,
  "height": 470,
  "title": "AFL Venues",
  "projection": {"type": "azimuthalEqualArea", "scale": 800, "rotate": [-133,28,0]
  },
  "params": [
    {
      "name": "AFL_team",
      "bind": {
        "input": "select",
        "options": [
          "Adelaide",
          "Brisbane Lions",
          "Carlton",
          "Collingwood",
          "Essendon",
          "Fremantle",
          "Geelong",
          "Gold Coast",
          "Greater Western Sydney",
          "Hawthorn",
          "Melbourne",
          "North Melbourne",
          "Port Adelaide",
          "Richmond",
          "St Kilda",
          "Sydney",
          "West Coast",
          "Western Bulldogs"
       ],
        "name": "AFL Team: "
      }
    }
  ],
  "config": {
    "background": "grey"
  },

  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/sam-callaghan/Data-Visualisation-2/main/data/oceania_topoJSON.topojson",
        "format": {"type": "topojson", "feature": "oceania.geo"}
      },
      "mark": {"type": "geoshape", "fill": "darkgrey", "stroke": "darkgray"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/sam-callaghan/Data-Visualisation-2/main/data/afl_stats_venue_only.csv"

      },
      "transform": [
          {"filter": "datum.Team == AFL_team"}
        ],
      "mark": {"type": "circle", 
               "tooltip": {"content": "data"}
               },
      "encoding": {
        "longitude": {"field": "Longitude", "type": "quantitative"},
        "latitude": {"field": "Latitude", "type": "quantitative"},
        "size": {
          "field": "Length",
          "type": "quantitative"
        },
        "stroke":{
            "condition": {
              "test": "datum.Home === null", "value": "red"},
              "value": "black"
            },
        "color":{
          "field": "Margin",
          "type":"quantitative",
          "scale":{"scheme":"blueorange", "domainMid": 0}
            }
      }
    }
  ]
}
