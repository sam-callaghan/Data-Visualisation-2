
{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
"params": [
    {
      "name": "Year_filter",
      "value": "2017",
      "bind": {
        "input": "select",
        "options": [
          "2012",
          "2013",
          "2014",
          "2015",
          "2016",
          "2017",
          "2018",
          "2019",
          "2020",
          "Total"
       ],
        "name": "Year: "
      }
    },
    {
      "name": "Team_filter",
      "select": {"type": "point", "fields": ["Team 1"]},
      "bind": {
        "input": "select",
        "options": [
          "Adelaide",
          "Brisbane Lions",
          "Carlton",
          "Collingwood",
          "Essendon",
          "Fremantle",
          "Geelong",
          "Gold Coast",
          "Greater Western Sydney",
          "Hawthorn",
          "Melbourne",
          "North Melbourne",
          "Port Adelaide",
          "Richmond",
          "St Kilda",
          "Sydney",
          "West Coast",
          "Western Bulldogs",
          null
       ],
       "labels": [
        "Adelaide",
        "Brisbane Lions",
        "Carlton",
        "Collingwood",
        "Essendon",
        "Fremantle",
        "Geelong",
        "Gold Coast",
        "Greater Western Sydney",
        "Hawthorn",
        "Melbourne",
        "North Melbourne",
        "Port Adelaide",
        "Richmond",
        "St Kilda",
        "Sydney",
        "West Coast",
        "Western Bulldogs",
        "None"
     ],
        "name": "AFL Team: "
      }
    }
  ],
  "data": { "url": "https://raw.githubusercontent.com/sam-callaghan/Data-Visualisation-2/main/data/afl_stats_team_matchup_only.csv"},
  "transform": [
      {"filter": "datum.Year == Year_filter"},
      {"calculate": "abs(datum.Margin)", "as": "Margin_abs"}
  ],
  "config": {
    "background": "grey"
  },
  "mark": "rect",
  "width": 500,
  "height": 500,
  "encoding": {
    "y": {
      "field": "Team 1 Label",
      "type": "nominal",
      "axis": {
        "titleColor": "white",
        "title": "Team 1",
        "labelColor": "white",
        "titleFontSize": 18,
        "titlePadding": 20
      }
    },
    "x": {
      "field": "Team 2 Label",
      "type": "nominal",
      "axis": {
        "titleColor": "white",
        "title": "Team 2",
        "labelColor": "white",
        "labelAngle": 0,
        "titleFontSize": 18,
        "titlePadding": 20
      }
    },
    "color": {"aggregate": "mean", 
              "field": "Margin", 
              "scale":{"scheme":"redyellowgreen", "domainMid": 0},
              "legend": {
                "title": "Margin",
                "titleColor": "white",
                "labelColor": "white",
                "titleFontSize": 18
              }
              },

    "stroke": {
                "condition": {
                  "param": "Team_filter",
                  "empty": false,
                  "value": "grey"
                },
              "value": null
              },
    "tooltip":[ 
      {"field": "Margin", "type": "quantitative", "title": "Margin"},
      {"field": "Team 1", "type": "nominal", "title": "Team 1"},
      {"field": "Team 2", "type": "nominal", "title": "Team 2"}
    ],
    "strokeWidth":{
      "condition": {
        "param": "Team_filter", "value": 1}
    },
    "opacity": {
      "condition": {"param": "Team_filter", "value": 1},
      "value": 0.3
    },
    "order": {"condition": {"param": "Team_filter", "value": 1}, "value": 0}
  }
}
