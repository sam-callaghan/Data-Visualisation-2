{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "config": {"background": "grey"},
  "params": [
    {"name": "Premier_param", "value": "Y"},
    {
      "name": "Year_Select",
      "value": "2017",
      "bind": {
        "input": "select",
        "options": [
          "2012",
          "2013",
          "2014",
          "2015",
          "2016",
          "2017",
          "2018",
          "2019",
          "2020"
        ],
        "name": "Year: "
      }
    }
  ],
  "data": {
    "url": "https://raw.githubusercontent.com/sam-callaghan/Data-Visualisation-2/main/data/afl_stats_actual_only.csv"
  },
  "width": 600,
  "height": 500,
  "padding": 10,
  "layer": [
    {
      "params": [
        {
          "name": "Team_Filter",
          "select": {"type": "point", "fields": ["Team Label"]},
          "value": ["RIC", "HAW", "WBD"],
          "bind": "legend"
        }
      ],
      "mark": {"type": "line"},
      "encoding": {
        "x": {
          "field": "Year",
          "type": "quantitative",
          "scale": {"domainMin": 2011, "domainMax": 2020},
          "axis": {
            "grid": true,
            "titleColor": "white",
            "labelColor": "white",
            "labelFontSize": 12,
            "titleFontSize": 18,
            "titlePadding": 20,
            "format": ".0f"
          }
        },
        "y": {
          "field": "Position",
          "type": "ordinal",
          "sort": "-x",
          "title": "Ladder Position",
          "axis": {
            "titleColor": "white",
            "labelColor": "white",
            "labelFontSize": 12,
            "titleFontSize": 18,
            "titlePadding": 20
          }
        },
        "order": {"field": "Team", "type": "nominal"},
        "color": {
          "field": "Team Label",
          "scale": {
            "domain": [
              "ADE",
              "BRI",
              "CAR",
              "COL",
              "ESS",
              "FRE",
              "GEE",
              "GCS",
              "GWS",
              "HAW",
              "MEL",
              "NOR",
              "POR",
              "RIC",
              "STK",
              "SYD",
              "WCE",
              "WBD"
            ],
            "range": [
              "green",
              "maroon",
              "navy",
              "lightgrey",
              "lime",
              "purple",
              "white",
              "aqua",
              "orange",
              "brown",
              "red",
              "indigo",
              "black",
              "yellow",
              "pink",
              "coral",
              "deeppink",
              "blue"
            ]
          },
          "legend": {
            "orient": "left",
            "titleColor": "white",
            "titleFontSize": 18,
            "labelFontSize": 15,
            "labelSeparation": 5,
            "labelColor": "white",
            "strokeColor": "white",
            "padding": 8
          }
        },
        "opacity": {
          "condition": {"param": "Team_Filter", "value": 1},
          "value": 0.2
        },
        "size": {"value": 1, "condition": {"param": "Team_Filter", "value": 4}}
      }
    },
    {
      "mark": {"type": "circle"},
      "encoding": {
        "x": {"field": "Year", "type": "quantitative"},
        "y": {"field": "Position", "type": "ordinal", "sort": "-x"},
        "color": {
          "field": "Team Label",
          "scale": {
            "domain": [
              "ADE",
              "BRI",
              "CAR",
              "COL",
              "ESS",
              "FRE",
              "GEE",
              "GCS",
              "GWS",
              "HAW",
              "MEL",
              "NOR",
              "POR",
              "RIC",
              "STK",
              "SYD",
              "WCE",
              "WBD"
            ],
            "range": [
              "green",
              "maroon",
              "navy",
              "lightgrey",
              "lime",
              "purple",
              "white",
              "aqua",
              "orange",
              "brown",
              "red",
              "indigo",
              "black",
              "yellow",
              "pink",
              "coral",
              "deeppink",
              "blue"
            ]
          }
        },
        "opacity": {
          "condition": [
            {"test": "datum.Year === Year_Select", "value": 1},
            {"param": "Team_Filter", "value": 1}
          ],
          "value": 0.2
        },
        "size": {
          "condition": [
            {"test": "datum.Premier === Premier_param", "value": 500},
            {"param": "Team_Filter", "value": 250},
            {"test": "datum.Year === Year_Select", "value": 150}
          ]
        },
        "stroke": {"value": "black"}
      }
    },
    {
      "transform": [{"filter": "datum.Year == 2020"}],
       "mark": {
                "type": "text",
                "align": "left",
                "dx": 20,
                "fontSize": 16,
                "color": "white"
              },
      "encoding": {
        "x": {"field": "Year", "type": "quantitative"},
        "y": {"field": "Position", "type": "ordinal", "sort": "-x"},
        "text": {"field": "Team", "type": "nominal"},

        "opacity": {
          "condition": [
            {"test": "datum.Year === Year_Select", "value": 1},
            {"param": "Team_Filter", "value": 1}
          ],
          "value": 0
        }
      }
    }
  ]
}