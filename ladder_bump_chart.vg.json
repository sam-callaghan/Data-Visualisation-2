{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Bump chart",
  "data": {
    "url": "https://raw.githubusercontent.com/sam-callaghan/Data-Visualisation-2/main/data/afl_stats_ladder_only.csv"
  },
  "width": 700,
  "height": 500,
  "config": {"background": "grey"},
  "params": [{
          "name": "Premier_param", "value": "Y"
      }],
  "layer":[
    {
      "params": [{
          "name": "Filter",
          "select": {"type": "point", "fields": ["Team"]},
          "value": ["Richmond","Hawthorn", "Western Bulldogs"],
          "bind": "legend"
      }],
      "mark": {"type": "line", "point": true},
      "encoding": {
        "x": {
          "field": "Year", 
          "type": "temporal", 
          "scale":{"domainMin":"2011", "domainMax": "2021"},
          "axis": {
                    "titleColor": "white",
                    "labelColor": "white",
                    "titleFontSize": 15
                  }
          },
        "y": {
          "field": "Position", 
          "type": "ordinal", 
          "sort":"-x",
          "axis": {
                    "titleColor": "white",
                    "labelColor": "white",
                    "titleFontSize": 15
                  }
          },
        "order": {"field": "Team", "type": "nominal"},
        "color": {
          "field": "Team",
          "scale":{"domain": [            
                        "Adelaide",
                        "Brisbane Lions",
                        "Carlton",
                        "Collingwood",
                        "Essendon",
                        "Fremantle",
                        "Geelong",
                        "Gold Coast",
                        "Greater Western Sydney",
                        "Hawthorn",
                        "Melbourne",
                        "North Melbourne",
                        "Port Adelaide",
                        "Richmond",
                        "St Kilda",
                        "Sydney",
                        "West Coast",
                        "Western Bulldogs"
                        ],
                    "range":["green", "maroon", "navy", "lightgrey", "lime", "purple", "white", "aqua", "orange", "deepskyblue", "red", "indigo", "black", "yellow", "pink", "coral", "deeppink", "blue"]
                    },
            "legend": {
                    "titleColor": "white",
                    "titleFontSize": 15,
                    "labelFontSize": 11,
                    "labelSeparation": 5,
                    "labelColor": "white"
                  }
          },
        "opacity": {
          "condition": {"param": "Filter", "value": 1},
          "value": 0.2
        },
        "size": {
          "value": 1,
          "condition": {"param": "Filter", "value": 4}
    
        }
        }
    },
    {
      "mark": {"type": "circle"},
      "encoding": {
        "x": {"field": "Year", "type": "temporal"},
        "y": {"field": "Position", "type": "ordinal", "sort":"-x"},
        "color": {
          "field": "Team",
          "scale":{"domain": [            
                "Adelaide",
                "Brisbane Lions",
                "Carlton",
                "Collingwood",
                "Essendon",
                "Fremantle",
                "Geelong",
                "Gold Coast",
                "Greater Western Sydney",
                "Hawthorn",
                "Melbourne",
                "North Melbourne",
                "Port Adelaide",
                "Richmond",
                "St Kilda",
                "Sydney",
                "West Coast",
                "Western Bulldogs"],
                "range":["green", "maroon", "navy", "lightgrey", "lime", "purple", "white", "aqua", "orange", "deepskyblue", "red", "indigo", "black", "yellow", "pink", "coral", "deeppink", "blue"]}
          },
        "opacity": {
          "condition": {"param": "Filter", "value": 1},
          "value": 0.2
        },
        "size": {
          "condition":[
            {"test": "datum.Premier === Premier_param", "value": 500},
            {"param": "Filter", "value": 150}
             
          ]
        },
        "stroke": {"value": "black"}
      }

    }
  ]
}

