{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
      "url":"https://raw.githubusercontent.com/sam-callaghan/Data-Visualisation-2/main/data/afl_stats_actual_only.csv"
  },
     "params": [
    {
      "name": "Year_filter",
      "value": "2020",
      "bind": {
        "input": "select",
        "options": [
          "2012",
          "2013",
          "2014",
          "2015",
          "2016",
          "2017",
          "2018",
          "2019",
          "2020"
       ],
        "name": "Year: "
      }
    },
    {
      "name": "Team_filter",
      "select": {"type": "point", "fields": ["Team"]},
      "bind": {
        "input": "select",
        "options": [
          "Adelaide",
          "Brisbane Lions",
          "Carlton",
          "Collingwood",
          "Essendon",
          "Fremantle",
          "Geelong",
          "Gold Coast",
          "Greater Western Sydney",
          "Hawthorn",
          "Melbourne",
          "North Melbourne",
          "Port Adelaide",
          "Richmond",
          "St Kilda",
          "Sydney",
          "West Coast",
          "Western Bulldogs"
       ],
        "name": "AFL Team:"
      }
    },
    {
      "name": "Stats_filter",
      "value": ["G", "D", "M"],
      "bind": {
        "input": "select",

        "options": [
          ["G", "D", "M"],
          ["D", "CP", "UP"],
          ["G", "I50", "B"],
          ["T", "1%", "T50"]
       ],
       "labels": [
         "General",
         "Disposals",
         "Offensive",
         "Defensive"
       ],
        "name": "Stats:"
      }
    },
    {
          "name": "Premier_param", "value": "Y"
     }
  ],
  "transform": [
    {
      "filter": "datum.Year == Year_filter"
    },
    {
      "fold": ["K", "HB", "D", "M", "G", "GA", "I50", "BH", "T", "HO", "FF", "FA", "CL", "CG", "R50", "AF", "SC", "CP", "UP", "ED", "DE%", "CM", "MI5", "1%", "BO", "CCL", "SCL", "MG", "TO", "ITC", "T50" ]
    },
    {
      "calculate":"parseInt(datum.Position)", "as": "Position"
    }
  ],
  "config": {"background": "grey"},
  "mark": "rect",
  "encoding": {
    "x": {
      "field": "key", 
      "type": "nominal", 
      "title": "Statistics",
      "axis": {
               "titleColor": "white",
               "labelColor": "white",
               "titleFontSize": 15,
               "labelAngle": 0
              }
    },
    "y": {
      "field": "Team", 
      "type": "ordinal",
      "sort": {"field": "Position"},
      "axis": {
              "titleColor": "white",
              "labelColor": "white",
              "titleFontSize": 15
              }
    },
    "color": {
      "field": "value",
      "type": "quantitative",
      "scale": {"scheme": "redyellowgreen", "reverse": true}
    },
    "opacity": {
      "condition": {"param": "Team_filter", "value": 1},
      "value": 0.3
    },
    "stroke": {
      "condition": [
        {"param": "Team_filter", "empty": false, "value": "black"},
        {"test": "datum.Premier === Premier_param", "value": "black"}
      ],
      "value": null
    },
    "strokeWidth": {
        "condition":{"test": "datum.Premier === Premier_param", "value": 3},
      "value": 1
    },
    "tooltip": [
      {"field": "D", "type": "nominal", "title": "Disposals"},
      {"field": "G", "type": "nominal", "title": "Goals"},
      {"field": "T", "type": "nominal", "title": "Tackles"}
    ]
  }
}