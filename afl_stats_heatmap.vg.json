{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
      "url":"https://raw.githubusercontent.com/sam-callaghan/Data-Visualisation-2/main/data/afl_stats_actual_only.csv"
  },
     "params": [
    {
      "name": "Year_filter",
      "value": "2017",
      "bind": {
        "input": "select",
        "options": [
          "2012",
          "2013",
          "2014",
          "2015",
          "2016",
          "2017",
          "2018",
          "2019",
          "2020"
       ],
        "name": "Year: "
      }
    },
    {
      "name": "Team_filter",
      "select": {"type": "point", "fields": ["Team"]},
      "bind": {
        "input": "select",
        "options": [
          "Adelaide",
          "Brisbane Lions",
          "Carlton",
          "Collingwood",
          "Essendon",
          "Fremantle",
          "Geelong",
          "Gold Coast",
          "Greater Western Sydney",
          "Hawthorn",
          "Melbourne",
          "North Melbourne",
          "Port Adelaide",
          "Richmond",
          "St Kilda",
          "Sydney",
          "West Coast",
          "Western Bulldogs",
          null
       ],
       "labels": [
        "Adelaide",
        "Brisbane Lions",
        "Carlton",
        "Collingwood",
        "Essendon",
        "Fremantle",
        "Geelong",
        "Gold Coast",
        "Greater Western Sydney",
        "Hawthorn",
        "Melbourne",
        "North Melbourne",
        "Port Adelaide",
        "Richmond",
        "St Kilda",
        "Sydney",
        "West Coast",
        "Western Bulldogs",
        "None"
     ],
        "name": "AFL Team:"
      }
    },
    {
          "name": "Premier_param", "value": "Y"
     }
  ],
  "config": {"background": "grey"},
  "hconcat":[
    {
      "transform": [
      {
        "filter": "datum.Year == Year_filter"
      },
      {
        "fold": ["K", "HB", "D", "M", "G", "GA", "I50", "BH", "T", "HO", "FF", "FA", "CL", "CG", "R50", "AF", "SC", "CP", "UP", "ED", "DE%", "CM", "MI5", "1%", "BO", "CCL", "SCL", "MG", "TO", "ITC", "T50" ]
      },
      {
        "filter": {"field": "key", "oneOf": ["D", "CL", "CP", "UP", "ED", "DE%", "MG", "M", "CM", "MI5"]}
      },
      {
        "calculate":"parseInt(datum.Position)", "as": "Position"
      }
    ],
    "mark": "rect",
    "width": 260,
    "height": 450,
    "encoding": {
        "x": {
          "field": "key",
          "type": "nominal", 
          "title": "Ball Use Stats",
          "sort": ["D", "CP", "UP", "CL", "MG", "ED", "DE%", "M", "CM", "MI5"],
          "axis": {
                  "titleColor": "white",
                  "labelColor": "white",
                  "titleFontSize": 18,
                  "titlePadding": 20,
                  "labelAngle": 0
                  }
        },
        "y": {
          "field": "Team Label", 
          "type": "ordinal",
          "sort": {"field": "Position"},
          "axis": {
                  "titleColor": "white",
                  "labelColor": "white",
                  "titleFontSize": 18,
                  "titlePadding": 20
                  }
        },
        "color": {
          "field": "value",
          "type": "quantitative",
          "scale": {"scheme": "redyellowgreen", "reverse": true}
        },
        "opacity": {
          "condition": [
            {"param": "Team_filter", "value": 1}
            ],

          "value": 0.3
        },
        "stroke": {
          "condition": [
            {"param": "Team_filter", "empty": false, "value": "black"},
            {"test": "datum.Premier === Premier_param", "value": "black"}
          ],
          "value": null
        },
        "strokeWidth": {
            "condition":{"test": "datum.Premier === Premier_param", "value": 3},
          "value": 1
        },
        "tooltip": [
          {"field": "value", "type": "nominal", "title": "Ranking"}
          
        ]
      }
    },
    {
      "transform": [
      {
        "filter": "datum.Year == Year_filter"
      },
      {
        "fold": ["K", "HB", "D", "M", "G", "GA", "I50", "BH", "T", "HO", "FF", "FA", "CL", "CG", "R50", "AF", "SC", "CP", "UP", "ED", "DE%", "CM", "MI5", "1%", "BO", "CCL", "SCL", "MG", "TO", "ITC", "T50" ]
      },
      {
        "filter": {"field": "key", "oneOf": ["G", "B", "GA", "I50", "T", "ITC", "T50"]}
      },
      {
        "calculate":"parseInt(datum.Position)", "as": "Position"
      }
    ],
    "mark": "rect",
    "width": 150,
    "height": 450,
    "encoding": {
        "x": {
          "field": "key",
          "type": "nominal", 
          "title": "Offensive/Defensive Stats",
          "sort": ["G", "GA", "I50", "T", "T50", "ITC"],
          "axis": {
                  "titleColor": "white",
                  "labelColor": "white",
                  "titleFontSize": 18,
                  "titlePadding": 20,
                  "labelAngle": 0
                  }
        },
        "y": {
          "field": "Team Label", 
          "type": "ordinal",
          "sort": {"field": "Position"},
          "axis": {
                  "titleColor": "white",
                  "labelColor": "white",
                  "titleFontSize": 0
                  }
        },
        "color": {
          "field": "value",
          "type": "quantitative",
          "scale": {"scheme": "redyellowgreen", "reverse": true},
          "legend": {
            "title": "Ranking",
            "titleColor": "white",
            "labelColor": "white",
            "titleFontSize": 18,
            "labelFontSize": 15          }
        },
        "opacity": {
          "condition": [
            {"param": "Team_filter", "value": 1}
            ],

          "value": 0.3
        },
        "stroke": {
          "condition": [
            {"param": "Team_filter", "empty": false, "value": "black"},
            {"test": "datum.Premier === Premier_param", "value": "black"}
          ],
          "value": null
        },
        "strokeWidth": {
            "condition":{"test": "datum.Premier === Premier_param", "value": 3},
          "value": 1
        },
        "tooltip": [
          {"field": "value", "type": "nominal", "title": "Ranking"}
          
        ]
      }
    },
    {
      "transform": [
      {
        "filter": "datum.Year == Year_filter"
      },
      {
        "fold": ["K", "HB", "D", "M", "G", "GA", "I50", "BH", "T", "HO", "FF", "FA", "CL", "CG", "R50", "AF", "SC", "CP", "UP", "ED", "DE%", "CM", "MI5", "1%", "BO", "CCL", "SCL", "MG", "TO", "ITC", "T50" ]
      },
      {
        "filter": {"field": "key", "oneOf": ["HO", "CG", "AF", "SC", "BO", "TO","1%"]}
      },
      {
        "calculate":"parseInt(datum.Position)", "as": "Position"
      }
    ],
    "mark": "rect",
    "width": 180,
    "height": 450,
    "encoding": {
        "x": {
          "field": "key",
          "type": "nominal", 
          "title": "Random Stats",
          "sort": ["AF", "SC", "HO", "BO", "1%", "CG", "TO"],
          "axis": {
                  "titleColor": "white",
                  "labelColor": "white",
                  "titleFontSize": 18,
                  "titlePadding": 20,
                  "labelAngle": 0
                  }
        },
        "y": {
          "field": "Team Label", 
          "type": "ordinal",
          "sort": {"field": "Position"},
          "axis": {
                  "titleColor": "white",
                  "labelColor": "white",
                  "titleFontSize": 0
                  }
        },
        "color": {
          "field": "value",
          "type": "quantitative",
          "scale": {"scheme": "redyellowgreen", "reverse": true}
        },
        "opacity": {
          "condition": [
            {"param": "Team_filter", "value": 1}
            ],

          "value": 0.3
        },
        "stroke": {
          "condition": [
            {"param": "Team_filter", "empty": false, "value": "black"},
            {"test": "datum.Premier === Premier_param", "value": "black"}
          ],
          "value": null
        },
        "strokeWidth": {
            "condition":{"test": "datum.Premier === Premier_param", "value": 3},
          "value": 1
        },
        "tooltip": [
          {"field": "value", "type": "nominal", "title": "Ranking"}
          
        ]
      }
    }
  ]
  
}